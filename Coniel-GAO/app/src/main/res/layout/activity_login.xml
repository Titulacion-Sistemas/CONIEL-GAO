<ScrollView
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:weightSum="1"
        android:animationCache="false"
        android:baselineAligned="false" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/img_logo"
            android:scaleType="center"
            android:src="@drawable/splash_screen"
            android:background="#64bddb"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25px"
            android:gravity="center_horizontal"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/lbInicio"
            android:id="@+id/textView"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/titulo"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:text=""
            android:id="@+id/textView2" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:weightSum="1"
            android:animationCache="false"
            android:baselineAligned="false"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:paddingTop="40dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:paddingBottom="40dp"
            android:layout_marginBottom="70dp"
            style="@style/LayoutStilo">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/subtitulo"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/lblusuario"
                    android:id="@+id/lblusuario"
                    android:textStyle="normal"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/titulo"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text=""
                    android:id="@+id/textView7" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/editText"
                    android:text="@string/txtusuario"
                    android:hint="@string/usuario"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text=""
                    android:id="@+id/textView3" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/subtitulo"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/lblContrasenia"
                    android:id="@+id/textView5"
                    android:textStyle="normal"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/titulo"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text=""
                    android:id="@+id/textView8" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:id="@+id/editText2"
                    android:text="@string/txtcontrasenia"
                    android:hint="@string/contrasenia"
                    android:fontFamily="@string/txtusuario"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/titulo"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text=""
                    android:id="@+id/textView6" />

                <Button
                    android:layout_width="135dp"
                    android:layout_height="wrap_content"
                    android:text="@string/btnInicioSesion"
                    android:id="@+id/button"
                    android:layout_gravity="right"
                    android:layout_marginRight="10dp"
                    android:textStyle="bold"
                    android:textAlignment="gravity"
                    android:textColor="#fefef0"
                    android:textSize="25dp"
                    style="@style/ButtonStilo" />


                <!--<View
                    android:layout_width="match_parent"
                    android:layout_height="2dip"
                    android:background="#64bddb" />-->
        </LinearLayout>
    </LinearLayout>
</ScrollView>